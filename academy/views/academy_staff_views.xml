<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===== Action ===== -->
    <record id="action_academy_staff" model="ir.actions.act_window">
        <field name="name">Staff</field>
        <field name="res_model">academy.staff</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ===== Vue liste ===== -->
    <record id="view_academy_staff_list" model="ir.ui.view">
        <field name="name">academy.staff.list</field>
        <field name="model">academy.staff</field>
        <field name="arch" type="xml">
            <list string="Membres du staff">
                <field name="user_id"/>
                <field name="job_title"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- ===== Vue formulaire ===== -->
    <record id="view_academy_staff_form" model="ir.ui.view">
        <field name="name">academy.staff.form</field>
        <field name="model">academy.staff</field>
        <field name="arch" type="xml">
            <form string="Membre du staff">
                <sheet>
                    <h1><field name="name" readonly="1"/></h1>
                    <group>
                        <group string="Infos staff">
                            <field name="job_title"/>
                            <field name="active"/>
                        </group>
                        <group string="Infos utilisateur (lecture seule)">
                            <field name="user_id" readonly="1"/>
                            <field name="login" readonly="1"/>
                            <field name="email" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
