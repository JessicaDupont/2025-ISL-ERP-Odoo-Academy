<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===== Action ===== -->
    <record id="action_academy_staff" model="ir.actions.act_window">
        <field name="name">Staff</field>
        <field name="res_model">academy.staff</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajoutez votre premier membre du staff
            </p>
        </field>
    </record>

    <!-- ===== Vue liste ===== -->
    <record id="view_academy_staff_list" model="ir.ui.view">
        <field name="name">academy.staff.list</field>
        <field name="model">academy.staff</field>
        <field name="arch" type="xml">
            <list string="Membres du staff">
                <field name="user_id"/>
                <field name="job_title"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ===== Vue formulaire ===== -->
    <record id="view_academy_staff_form" model="ir.ui.view">
        <field name="name">academy.staff.form</field>
        <field name="model">academy.staff</field>
        <field name="arch" type="xml">
            <form string="Fiche Staff">
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="job_title"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
