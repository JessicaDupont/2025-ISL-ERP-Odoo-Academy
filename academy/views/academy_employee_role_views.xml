<odoo>
    <record id="view_academy_role_form" model="ir.ui.view">
        <field name="name">academy.employee.role.form</field>
        <field name="model">academy.employee.role</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_academy_role_list" model="ir.ui.view">
        <field name="name">academy.employee.role.list</field>
        <field name="model">academy.employee.role</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="color"/>
            </list>
        </field>
    </record>

    <record id="action_academy_employee_roles" model="ir.actions.act_window">
        <field name="name">Rôles des employés</field>
        <field name="res_model">academy.employee.role</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
