<odoo>
    <record id="view_academy_instructor_form" model="ir.ui.view">
        <field name="name">academy.instructor.form</field>
        <field name="model">academy.instructor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1><field name="name" readonly="1"/></h1>
                    <group>
                        <group string="Infos Instructor">
                            <field name="active"/>
                        </group>
                        <group string="Infos utilisateur (lecture seule)">
                            <field name="user_id" readonly="1"/>
                            <field name="login" readonly="1"/>
                            <field name="email" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_academy_instructor_list" model="ir.ui.view">
        <field name="name">academy.instructor.list</field>
        <field name="model">academy.instructor</field>
        <field name="arch" type="xml">
            <list string="Liste des instructeurs">
                <field name="user_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_academy_instructor" model="ir.actions.act_window">
        <field name="name">Instructors</field>
        <field name="res_model">academy.instructor</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
